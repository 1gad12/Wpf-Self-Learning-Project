<Window x:Class="SuperMargalitProj.Info"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SuperMargalitProj"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="None"
        Title="Info" Height="1080" Width="1920">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="image/Other/Info.png"/>
        </Grid.Background>
        <MediaElement Volume="1" Name="Info1" Source="Songs/InfoOption.mp3" MediaEnded="media_MediaEnded"  LoadedBehavior="Manual" UnloadedBehavior="Close" Height="1080" Width="1920" Visibility="Hidden"/>

        <Button x:Name="Back" Content=""  HorizontalAlignment="Left"   Style="{StaticResource MyButton}"   Background="Transparent" Margin="12,958,0,0" VerticalAlignment="Top" Width="281" Height="109" MouseEnter="Back_MouseEnter" MouseLeave="Back_MouseLeave" Click="Back_Click" />
    </Grid>
</Window>
